{
  "manifest_version": 2,
  "name": "YouTube Notes",
  "version": "1.0",

  "description": "Make private notes at specific times on YouTube videos.",
  "author": "Scott Pease",

  "icons": {
    "48": "icons/ytn_icon-48.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
        "matches": [
          "*://*.youtube.com/watch*"
        ],
        "js": [
          "/content_scripts/yt_ui.js"
        ],
        "css": [
          "/content_css/yt_ui.css"
        ]
    }
  ],

  "background": {
    "scripts": ["background/page_action.js"]
  }

}
