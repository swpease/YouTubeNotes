{
  "manifest_version": 2,
  "name": "YouTube Notes",
  "version": "1.0",

  "description": "Mark times of interest in your liked videos and make notes about them.",
  "author": "Scott Pease",

  "icons": {
    "48": "icons/border-48.png"
  },

  "page_action": {
    "browser_style": true,
    "default_icon": "icons/chillout.png",
    "default_title": "Make a note for this video time",
    "default_popup": "popup/notes_ui.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],


  "content_scripts": [
    {
        "matches": [
          "*://*.youtube.com/watch*"
        ],
        "js": [
          "/content_scripts/yt_ui.js"
        ]
    },
    {
      "matches": [
        "*://*.youtube.com/channel/*/videos*",
        "*://*.youtube.com/user/*/videos*"
      ],
      "js": [
        "/content_scripts/likes_page.js"
      ]
    }
  ]

}
